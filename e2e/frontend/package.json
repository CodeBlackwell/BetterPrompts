{
  "name": "betterprompts-e2e",
  "version": "1.0.0",
  "description": "E2E tests for BetterPrompts using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:parallel": "playwright test --workers=5",
    "test:serial": "playwright test --workers=1",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:critical": "playwright test --grep @critical",
    "test:persona": "playwright test --grep @persona",
    "test:sarah": "playwright test --grep @sarah",
    "test:alex": "playwright test --grep @alex",
    "test:chen": "playwright test --grep @chen",
    "test:maria": "playwright test --grep @maria",
    "test:techcorp": "playwright test --grep @techcorp",
    "report": "playwright show-report",
    "codegen": "playwright codegen",
    "install": "playwright install --with-deps",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "visual:update": "playwright test --update-snapshots",
    "visual:check": "playwright test --grep @visual"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axe-core": "^4.8.3",
    "@axe-core/playwright": "^4.8.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-plugin-playwright": "^0.20.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}